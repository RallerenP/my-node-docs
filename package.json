{
  "name": "my-node-docs",
  "version": "1.0.0",
  "repository": "https://github.com/RallerenP/my-node-docs.git",
  "author": "Rasmus Povlsen <git@rpovlsen.com>",
  "license": "MIT",
  "type": "module",
  "eslintConfig": {
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "scripts": {
    "start": "yarn build:css && node src/app.js",
    "start:dev": "nodemon --watch src --watch public --ignore public/css/styles.css -e js,html,css --exec \"cross-env PORT=8080 yarn start\"",
    "build:css": "postcss public/css/tailwind.css -o public/css/styles.css"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.12.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.2",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.7",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.3"
  }
}

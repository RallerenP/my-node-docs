    "express": "^4.17.1",
    "sequelize": "^6.5.1",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.2",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.3"
  }
}
